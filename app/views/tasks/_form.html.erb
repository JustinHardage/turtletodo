    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :create_date %><br />
    <%= f.datetime_select :create_date, :disabled => 'disabled' %>
  </div>
  <div class="field">
    <%= f.label :close_date %><br />
    <%= f.datetime_select :close_date, :include_blank => true, :disabled => 'disabled' %>
  </div>
  <div class="field">
    <%= f.label :current_work_log %><br />
    <%= f.number_field :current_work_log, :disabled => 'disabled' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
