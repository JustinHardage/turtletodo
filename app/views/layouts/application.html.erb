<!DOCTYPE html>
<html>
<head>
  <title>Turtletodo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="pageID">
	<%= image_tag("turtle.png", :id => "logoID")  %>
	<div id="title_and_nav_ID">
		<h1 id="titleID">Turtle To Do</h1>
		<div id="navbarID">
			<ul>
				<li><%= link_to_unless_current("Active Tasks", activelist_task_path) {|link| content_tag('span', link, :class => 'current')}  %></li>
				<li><%= link_to_unless_current("All Tasks", tasks_path) {|link| content_tag('span', link, :class => 'current')} %></li>
	                        <li><%= link_to_unless_current("Worklogs", worklogs_path) {|link| content_tag('span', link, :class => 'current')} %></li>
				<li><%= link_to_unless_current("Users", users_path) {|link| content_tag('span', link, :class => 'current')} %></li>
			</ul>
		</div>
	</div>
	<hr />
	<div id="contentID">
		<%= yield %>
	</div>
</div>

</body>
</html>
